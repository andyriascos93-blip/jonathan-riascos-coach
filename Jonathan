    <!-- LÓGICA JAVASCRIPT -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('contact-form');
            const formMessage = document.getElementById('form-message');

            // Simulación del envío del formulario
            form.addEventListener('submit', function(e) {
                e.preventDefault(); 

                formMessage.classList.remove('hidden');
                formMessage.classList.remove('bg-red-900', 'text-red-300');
                formMessage.classList.add('bg-blue-600', 'text-white'); 
                formMessage.textContent = '¡Mensaje recibido! Jonathan te contactará en breve para coordinar tu Sesión de Claridad.';
                
                form.reset(); 
                
                document.getElementById('contacto').scrollIntoView({ behavior: 'smooth' });
            });
        });
    </script>
